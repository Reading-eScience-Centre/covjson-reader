{
  "name": "covjson-reader",
  "version": "0.1.1",
  "license" : "BSD-3-Clause",
  "description": "A reader for CoverageJSON files.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Reading-eScience-Centre/covjson-reader.git"
  },
  "bugs": {
    "url": "https://github.com/Reading-eScience-Centre/covjson-reader/issues"
  },
  "author": {
    "name": "Maik Riechert"
  },
  "files": [
    "covjson-reader.src.js",
    "covjson-reader.min.js"
  ],
  "registry": "jspm",
  "format": "esm",
  "scripts": {
    "docs": "esdoc -c esdoc.json",
    "postinstall": "jspm install",
    "style": "standard",
    "test": "karma start --single-run",
    "karma": "karma start",
    "saucelabs": "karma start karma.conf-ci.js",
    "build": "npm run build-src && npm run build-min",
    "build-src": "jspm bundle-sfx covjson-reader/reader covjson-reader.src.js --format global --global-name CovJSON --skip-source-maps",
    "build-min": "jspm bundle-sfx covjson-reader/reader covjson-reader.min.js --format global --global-name CovJSON --minify --skip-source-maps",
    "prepublish": "npm run build"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "config.js",
      "karma.conf.js",
      "karma.conf-ci.js"
    ]
  },
  "jspm": {
    "main": "reader",
    "directories": {
      "lib": "covjson-reader"
    },
    "files": null,
    "dependencies": {
      "cbor": "github:paroga/cbor-js@^0.1.0",
      "ndarray": "npm:ndarray@^1.0.18"
    },
    "devDependencies": {
      "assert": "github:jspm/nodelibs-assert@^0.1.0",
      "babel": "npm:babel-core@^5.8.22",
      "babel-runtime": "npm:babel-runtime@^5.8.20",
      "core-js": "npm:core-js@^1.1.0"
    }
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "esdoc": "^0.3.0",
    "esdoc-importpath-plugin": "0.0.1",
    "jspm": "^0.16.1",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "^0.2.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-jspm": "^2.0.1",
    "karma-mocha": "^0.2.0",
    "karma-sauce-launcher": "^0.2.14",
    "mocha": "^2.2.5",
    "standard": "^5.1.0"
  }
}
