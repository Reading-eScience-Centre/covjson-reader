{
  "name": "covjson-reader",
  "version": "0.7.3",
  "license": "BSD-3-Clause",
  "description": "A reader for CoverageJSON files.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Reading-eScience-Centre/covjson-reader.git"
  },
  "bugs": {
    "url": "https://github.com/Reading-eScience-Centre/covjson-reader/issues"
  },
  "author": {
    "name": "Maik Riechert"
  },
  "main": "lib/reader.js",
  "dependencies": {
    "cbor-js": "^0.1.0",
    "ndarray": "^1.0.18",
    "request-promise": "^1.0.2"
  },
  "files": [
    "lib/",
    "covjson-reader.*"
  ],
  "browser": {
    "./lib/http.js": "./lib/http-browser.js",
    "request-promise": false
  },
  "scripts": {
    "docs": "esdoc -c esdoc.json",
    "style": "standard",
    "transpile": "babel -d lib/ src/",
    "test": "npm run transpile && npm run testnode && npm run testkarma",
    "testnode": "mocha --compilers js:babel-register",
    "testkarma": "karma start --single-run",
    "karma": "karma start",
    "saucelabs": "karma start karma.conf-ci.js",
    "browserdist": "browserify lib/reader.js -s CovJSON -o covjson-reader.src.js",
    "postbrowserdist": "uglifyjs covjson-reader.src.js -c unused=false -o covjson-reader.min.js --source-map covjson-reader.min.js.map",
    "build": "npm run transpile && npm run browserdist",
    "prepublish": "npm run build"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "karma.conf.js",
      "karma.conf-ci.js",
      "test/"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "^4.1.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^11.0.1",
    "core-js": "^2.0.2",
    "esdoc": "^0.4.1",
    "esdoc-importpath-plugin": "0.0.1",
    "finalhandler": "^0.4.1",
    "karma": "^0.13.9",
    "karma-browserify": "^4.4.2",
    "karma-chrome-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-sauce-launcher": "^0.2.14",
    "mocha": "^2.2.5",
    "serve-static": "^1.10.0",
    "standard": "^5.1.0",
    "uglify-js": "^2.4.24"
  }
}
